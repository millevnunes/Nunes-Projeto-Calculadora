<CalculatorLayout>:
    orientation: "vertical"

    BoxLayout:
        size_hint_y: None
        height: "50dp"
        padding: "5dp"

        Button:
            text: "C"
            on_press: root.clear_display()

        TextInput:
            id: display
            text: root.display_text
            readonly: True
            font_size: "24sp"

    GridLayout:
        cols: 4
        spacing: "5dp"

        Button:
            text: "7"
            on_press: root.update_display(self.text)

        Button:
            text: "8"
            on_press: root.update_display(self.text)

        Button:
            text: "9"
            on_press: root.update_display(self.text)

        Button:
            text: "/"
            on_press: root.update_display(self.text)

        Button:
            text: "4"
            on_press: root.update_display(self.text)

        Button:
            text: "5"
            on_press: root.update_display(self.text)

        Button:
            text: "6"
            on_press: root.update_display(self.text)

        Button:
            text: "*"
            on_press: root.update_display(self.text)

        Button:
            text: "1"
            on_press: root.update_display(self.text)

        Button:
            text: "2"
            on_press: root.update_display(self.text)

        Button:
            text: "3"
            on_press: root.update_display(self.text)

        Button:
            text: "-"
            on_press: root.update_display(self.text)

        Button:
            text: "0"
            on_press: root.update_display(self.text)

        Button:
            text: "."
            on_press: root.update_display(self.text)

        Button:
            text: "="
            on_press: root.calculate_result()

        Button:
            text: "+"
            on_press: root.update_display(self.text)
